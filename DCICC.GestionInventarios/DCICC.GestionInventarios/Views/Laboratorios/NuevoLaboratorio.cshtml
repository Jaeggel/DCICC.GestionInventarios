@{
    Layout = "~/Views/Shared/_Layout" + ViewBag.Menu + ".cshtml";
}


<div class="row">
    <div class="col-md-5 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Ingresar Nuevo Laboratorio </h2>
                <ul class="nav navbar-right panel_toolbox"></ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                @* Primero es el metodo (Metodo de la clase) - Controlador (Controller) *@
                @using (Html.BeginForm("NuevoLaboratorio", "Laboratorios"))
                {
                <div class="form-horizontal form-label-left input_mask">

                    <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                        <input type="text" class="form-control has-feedback-left" name="NombreLaboratorio" placeholder="Nombre del Laboratorio" maxlength="100">
                        <span class="fa fa-pencil-square-o form-control-feedback left" aria-hidden="true"></span>
                    </div>

                    <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                        <textarea  name="UbicacionLaboratorio" class="form-control has-feedback-left" rows="2" placeholder="Ubicación del Laboratorio" maxlength="50"></textarea>
                        <span class="fa  fa-compass form-control-feedback left" aria-hidden="true"></span>
                    </div>


                    <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                        <textarea name="DescripcionLaboratorio" class="form-control has-feedback-left" rows="3" placeholder="Descripción del laboratorio" maxlength="150"></textarea>
                        <span class="fa  fa-comments-o form-control-feedback left" aria-hidden="true"></span>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 col-sm-3 col-xs-12">¿Habilitar Laboratorio?</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input name="HabilitadoLaboratorio" type="checkbox" class="js-switch" checked />
                        </div>

                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                            <button type="submit" class="btn btn-success">Ingresar</button>
                            <button type="button" class="btn btn-primary">Cancelar</button>
                        </div>
                    </div>

                </div>
                }

            </div>
        </div>

    </div>

    <div class="col-md-7 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Laboratorios Existentes</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <form class="form-horizontal form-label-left input_mask">

                    <div id="tablaMarca"></div>
                    <h1>hola mundo</h1>

                </form>
            </div>
        </div>

    </div>



</div>

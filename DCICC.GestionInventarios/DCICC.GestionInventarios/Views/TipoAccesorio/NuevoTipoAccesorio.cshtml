@*              Sistema de Gestión de inventarios y ticketing para soporte Técnico
    Autores: Andres Chisaguano - Joel Ludeña
    Descripción: Vista para el ingreso de un nuevo tipo de Accesorio como por ejemplo
    CABLE USB,CARGADOR, etc.
*@

@* Sección para la definición del menú de administrador o auxiliar técnico *@
@{
    ViewBag.Title = "Tipos de Accesorios";
    Layout = "~/Views/Shared/_Layout" + ViewBag.Menu + ".cshtml";
}
@model DCICC.GestionInventarios.Models.TipoAccesorio

<h1>@ViewBag.Title</h1>
<div class="row">
    @* Panel para mostrar las opciones de ingreso de un tipo de accesorio *@
    <div class="col-md-5 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Nuevo Tipo de Accesorio </h2>
                <ul class="nav navbar-right panel_toolbox"></ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                @* Formulario para envio de datos de los componentes para el ingreso de un nuevo tipo de accesorio
                    (Metodo de la clase) - Controlador (Controller) *@
                @using (Html.BeginForm("NuevoTipoAccesorio", "TipoAccesorio"))
                {
                    <div class="form-horizontal form-label-left input_mask">
                        @* Cuadro de texto para el ingreso del nombre de un tipo de accesorio *@
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            <input type="text" class="form-control has-feedback-left" name="NombreTipoAccesorio" placeholder="Tipo de Accesorio" maxlength="50">
                            <span class="fa fa-pencil-square-o form-control-feedback left" aria-hidden="true"></span>
                        </div>
                        @* Área de Texto para el ingreso de la descripción de un tipo de accesorio *@
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            <textarea name="DescripcionTipoAccesorio" class="form-control has-feedback-left" rows="3" placeholder="Descripción del tipo de accesorio" maxlength="150"></textarea>
                            <span class="fa  fa-comments-o form-control-feedback left" aria-hidden="true"></span>
                        </div>
                        @* Checkbox para habilitar o deshabilitar el uso del nuevo tipo de accesorio *@
                        <div class="form-group">
                            <label class="col-md-12 col-sm-12 col-xs-12">¿Habilitar Tipo accesorio?</label>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <input name="HabilitadoTipoAccesorio" type="checkbox" class="js-switch" checked />
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        @* Sección de botones para guardar marca o cancelar el registro *@
                        <div class="form-group">
                            <div class="col-md-9 col-sm-12 col-xs-12 col-md-offset-3">
                                <button type="submit" class="btn btn-success">Ingresar</button>
                                <button type="button" class="btn btn-primary">Cancelar</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    @* Panel para mostrar la lista de tipos de accesorio existentes*@
    <div class="col-md-7 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Tipos de Accesorios Existentes</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <form class="form-horizontal form-label-left input_mask">
                    @* Sección para la elaboración de la tabla de tipos de accesorios mediante js *@
                    <div id="tablaTipoAccesorio"></div>
                    <h1>Datos</h1>
                </form>
            </div>
        </div>
    </div>
</div>

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Inventarios y Ticketing para Soporte Técnico</title>
    <link rel="shortcut icon" type="image/ico" href="@Url.Content("~/favicon.ico")">
    @Styles.Render("~/Content/css")
    <script type="text/javascript" src="~/Content/Tema/vendors/jquery/dist/jquery.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="~/Scripts/Site.js"></script>
</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    @* Sección para mostrar el icono de la Universidad y el título del sistema*@
                    <div class="navbar nav_title" style="border: 0;">
                        <div class="x_content">
                            <div class="row">
                                <div class="col-md-3">
                                    @* Enlace al método Index (Metodo de la clase) del Controlador Home (Controller) *@
                                    <a href="@Url.Action("Index", "Home")"><img src="~/Content/Images/LogoUPSCircular.png" height="60" width="60"></a>
                                </div>
                                <div class="col-md-9 image_section" id="image_section">
                                    @* Enlace al método Index (Metodo de la clase) del Controlador Home (Controller) *@
                                    <a href="@Url.Action("Index", "Home")"><img src="~/Content/Images/imagenEncabezado.png"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="x_content">
                            <div class="profile_info">
                                @* ViewBag proveniente del Controloador Login, en el mismo se muestra el nombre del usuario actual *@
                                <h2 id="usuarioActual">@ViewBag.UsuarioLogin</h2>
                                @* ViewBag proveniente del Controloador Login, en el mismo se muestra el correo electrónico del usuario actual *@
                                <span>@ViewBag.Correo</span>
                            </div>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->
                    <br />
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>General</h3>
                            <ul class="nav side-menu">
                                <li>
                                    @* Enlace al método Index (Metodo de la clase) del Controlador Home (Controller) *@
                                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home</a>
                                </li>
                                <li>
                                    <a><i class="fa fa-desktop"></i> Activos de TI <span class="fa fa-chevron-down"></span></a>

                                    <ul class="nav child_menu">
                                        @* Seccción de enlaces a ingreso de nueva categoria de activo o a modificación de categoria de activo *@
                                        <li><a href="@Url.Action("ModificarCategoriaActivo", "CategoriaActivo")">Categoría de Activos</a></li>
                                        @* Seccción de enlaces a ingreso de nuevo tipo de activo o a modificación de tipo de activo *@
                                        <li><a href="@Url.Action("ModificarTipoActivo", "TipoActivo")">Tipo de Activos</a></li>
                                        @* Seccción de enlaces a ingreso de nuevo laboratorio o a modificación de laboratorio *@
                                        <li><a href="@Url.Action("ModificarLaboratorio", "Laboratorios")">Laboratorios</a></li>
                                        @* Seccción de enlaces a ingreso de nueva marca o a modificación de marcas *@
                                        <li><a href="@Url.Action("ModificarMarca", "Marcas")">Marcas</a></li>
                                        @* Seccción de enlaces a ingreso de nuevo Tipo de Accesorio  o a modificación de Tipo de Accesorio *@
                                        <li><a href="@Url.Action("ModificarTipoAccesorio", "TipoAccesorio")">Tipo de Accesorio</a></li>
                                        @* Enlace al método NuevoActivo (Metodo de la clase) del Controlador Activos(Controller) *@
                                        <li><a href="@Url.Action("NuevoActivo", "Activos")">Nuevo Activo de TI</a></li>
                                    </ul>
                                </li>
                                @* Seccción de enlaces Consulta de Activos o Reportes de Activos *@
                                <li>
                                    <a href="@Url.Action("ConsultaActivos", "Activos")"><i class="fa fa-table"></i> Consulta de Activos</a>
                                </li>
                                @* Seccción de enlaces a Máquinas Virtuales y Sistemas Operativos *@
                                <li>
                                    <a><i class="fa fa-cloud"></i>Máquinas Virtuales <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        @* Seccción de enlaces a ingreso de nuevo sistema operativo o a modificación de sistema operativo*@
                                        <li>
                                            @* Enlace al método ModificarSistOperativo (Metodo de la clase) del Controlador SistOperativo(Controller) *@
                                            <a href="@Url.Action("ModificarSistOperativo", "SistOperativo")">Sistemas Operativos</a>
                                        </li>
                                        <li>
                                            @* Enlace al método ModificarMaqVirtual (Metodo de la clase) del Controlador MaqVirtuales(Controller) *@
                                            <a href="@Url.Action("ModificarMaqVirtual", "MaqVirtuales")">Máquinas Virtuales</a>
                                        </li>
                                    </ul>
                                </li>
                                @*Sección de enlaces para generación de reportes*@
                                <li>
                                    <a><i class="fa fa-bar-chart-o"></i> Reportes<span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        @* Seccción de enlaces a reportes de Activos *@
                                        <li><a href="@Url.Action("ReportesActivos", "Reportes")">Activos de TI</a></li>
                                        @* Seccción de enlaces a reportes de Máquinas virtuales *@
                                        <li><a href="@Url.Action("ReportesMaqVirtuales", "Reportes")">Máquinas Virtuales</a></li>
                                        @* Seccción de enlaces a reportes de Tickets *@
                                        <li><a href="@Url.Action("ReportesTickets", "Reportes")">Tickets</a></li>
                                        @* Seccción de enlaces a reportes de Logs *@
                                        <li><a href="@Url.Action("ReportesLogs", "Reportes")">Logs</a></li>
                                    </ul>
                                </li>
                                <li>
                                    @* Enlace al método GestionTickets (Metodo de la clase) del Controlador Tickets(Controller) *@
                                    <a href="@Url.Action("GestionTickets", "Tickets")"><i class="fa fa-ticket"></i>Gestión de Tickets</a>
                                </li>
                            </ul>
                        </div>
                        <div class="menu_section">
                            <h3>Administración</h3>
                            <ul class="nav side-menu">
                                @* Sección de enlaces a ingreso de nuevo Usuario  o a modificación de Usuarios *@
                                <li>
                                    @* Enlace al método ModificarUsuario (Metodo de la clase) del Controlador Usuarios(Controller) *@
                                    <a href="@Url.Action("ModificarUsuario", "Usuarios")"><i class="fa fa-user"></i> Usuarios</a>
                                </li>
                                @* Sección de enlaces a ingreso de nuevo Rol  o a modificación de Roles *@
                                <li>
                                    @* Enlace al método ModificarRol (Metodo de la clase) del Controlador Roles(Controller) *@
                                    <a href="@Url.Action("ModificarRol", "Roles")"><i class="fa fa-users"></i> Roles</a>
                                </li>
                                @* Sección de enlaces para visualización de Logs *@
                                <li>
                                    @* Enlace al método Logs (Metodo de la clase) del Controlador Los(Controller) *@
                                    <a href="@Url.Action("Logs", "Logs")"><i class="fa fa-archive"></i> Logs</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->
                </div>
            </div>
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    @* ViewBag proveniente del Controloador Login, en el mismo se muestra el nombre del usuario actual *@
                                    <img src="~/Content/Tema/images/user.png" alt="">@ViewBag.UsuarioLogin
                                    <span class=" fa fa-angle-down"></span>
                                </a>
                                @* Seccción de enlaces del menu lateral que se despliega del botón del usuario. *@
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li><a href="@Url.Action("PerfilUsuario", "Usuarios")"> Perfil</a></li>
                                    <li><a href="">Ayuda</a></li>
                                    <li><a onclick="cerrarSesion('@Url.Action("CerrarSesion", "Login")','@Url.Action("Login", "Login")')"><i class="fa fa-sign-out pull-right"></i> Cerrar Sesión</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <br />
                <!-- top tiles -->                                                                               
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        @* Construcción del Body en el resto de las vistas que hacen uso de este Layout*@
                        @RenderBody()
                    </div>
                </div>
                <!-- /top tiles -->
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Universidad Politécnica Salesiana &copy; @DateTime.Now.Year
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Inventarios y Ticketing para Soporte Técnico</title>
    <link rel="shortcut icon" type="image/ico" href="@Url.Content("~/favicon.ico")">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        @* Enlace al método Index (Metodo de la clase) del Controlador Home (Controller) *@
                        <a href="@Url.Action("Index", "Home")" class="site_title"><i class="fa fa-server"></i> <span>Inventarios</span></a>
                    </div>
                    <div class="clearfix"></div>
                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            <img src="~/Content/Tema/images/user.png" class="img-circle profile_img">
                        </div>
                        <div class="profile_info">
                            <span>Bienvenido,</span>
                            @* ViewBag proveniente del Controloador Login, en el mismo se muestra el nombre del usuario actual *@
                            <h2>@ViewBag.UsuarioLogin</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->
                    <br />
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>General</h3>
                            <ul class="nav side-menu">
                                <li>
                                    @* Enlace al método Index (Metodo de la clase) del Controlador Home (Controller) *@
                                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home</a>
                                </li>
                                <li>
                                    <a><i class="fa fa-desktop"></i> Activos de TI <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        @* Seccción de enlaces a ingreso de nueva categoria de activo o a modificación de categoria de activo *@
                                        <li>
                                            <a>Categoría de Activos<span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu">
                                                <li class="sub_menu">
                                                    @* Enlace al método NuevaCategoriaActivo (Metodo de la clase) del Controlador CategoriaActivo (Controller) *@
                                                    <a href="@Url.Action("NuevoCategoriaActivo", "CategoriaActivo")">Nueva Categoría de Activos</a>
                                                </li>
                                                <li>
                                                    @* Enlace al método ModificarCategoriaActivo (Metodo de la clase) del Controlador CategoriaActivo (Controller) *@
                                                    <a href="@Url.Action("ModificarCategoriaActivo", "CategoriaActivo")">Modificar Categoría de Activos</a>
                                                </li>
                                            </ul>
                                        </li>
                                        @* Seccción de enlaces a ingreso de nuevo tipo de activo o a modificación de tipo de activo *@
                                        <li>
                                            <a>Tipo de Activos<span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu">
                                                <li class="sub_menu">
                                                    @* Enlace al método NuevoTipoActivo (Metodo de la clase) del Controlador TipoActivo(Controller) *@
                                                    <a href="@Url.Action("NuevoTipoActivo", "TipoActivo")">Nuevo Tipo de Activo</a>
                                                </li>
                                                <li>
                                                    @* Enlace al método ModificarTipoActivo (Metodo de la clase) del Controlador TipoActivo(Controller) *@
                                                    <a href="@Url.Action("ModificarTipoActivo", "TipoActivo")">Modificar Tipo de Activo</a>
                                                </li>
                                            </ul>
                                        </li>
                                        @* Seccción de enlaces a ingreso de nuevo laboratorio o a modificación de laboratorio *@
                                        <li>
                                            <a>Laboratorios<span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu">
                                                <li class="sub_menu">
                                                    @* Enlace al método NuevoLaboratorio (Metodo de la clase) del Controlador Laboratorios(Controller) *@
                                                    <a href="@Url.Action("NuevoLaboratorio", "Laboratorios")">Nuevo Laboratorio</a>
                                                </li>
                                                <li>
                                                    @* Enlace al método ModificarLaboratorio (Metodo de la clase) del Controlador Laboratorios(Controller) *@
                                                    <a href="@Url.Action("ModificarLaboratorio", "Laboratorios")">Modificar Laboratorios</a>
                                                </li>
                                            </ul>
                                        </li>
                                        @* Seccción de enlaces a ingreso de nueva marca o a modificación de marcas *@
                                        <li>
                                            <a>Marcas<span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu">
                                                <li class="sub_menu">
                                                    @* Enlace al método NuevaMarca (Metodo de la clase) del Controlador Marcas(Controller) *@
                                                    <a href="@Url.Action("NuevaMarca", "Marcas")">Nueva Marca</a>
                                                </li>
                                                <li>
                                                    @* Enlace al método ModificarMarca (Metodo de la clase) del Controlador Marcas(Controller) *@
                                                    <a href="@Url.Action("ModificarMarca", "Marcas")">Modificar Marcas</a>
                                                </li>
                                            </ul>
                                        </li>
                                        @* Seccción de enlaces a ingreso de nuevo Tipo de Acesorio  o a modificación de Tipo de Acesorio *@
                                        <li>
                                            <a>Tipo de Acesorio<span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu">
                                                <li class="sub_menu">
                                                    @* Enlace al método NuevoTipoAccesorio (Metodo de la clase) del Controlador TipoAccesorio(Controller) *@
                                                    <a href="@Url.Action("NuevoTipoAccesorio", "TipoAccesorio")">Nuevo Tipo de Acesorio</a>
                                                </li>
                                                <li>
                                                    @* Enlace al método ModificarTipoAccesorio (Metodo de la clase) del Controlador TipoAccesorio(Controller) *@
                                                    <a href="@Url.Action("ModificarTipoAccesorio", "TipoAccesorio")">Modificar Tipo de Acesorio</a>
                                                </li>
                                            </ul>
                                        </li>
                                        @* Enlace al método NuevoActivo (Metodo de la clase) del Controlador Activos(Controller) *@
                                        <li><a href="@Url.Action("NuevoActivo", "Activos")">Nuevo Activo de TI</a></li>
                                    </ul>
                                </li>
                                @* Seccción de enlaces Consulta de Activos o Reportes de Activos *@
                                <li>
                                    <a><i class="fa fa-table"></i> Consulta de Activos<span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        @* Enlace al método ConsultaActivos (Metodo de la clase) del Controlador Activos(Controller) *@
                                        <li><a href="@Url.Action("ConsultaActivos", "Activos")">Consultar/Modificar Activos</a></li>
                                    </ul>
                                </li>
                                <li>
                                    @* Enlace al método ReporteActivo (Metodo de la clase) del Controlador Activos(Controller) *@
                                    <a><i class="fa fa-bar-chart-o"></i> Reportes <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="@Url.Action("ReporteActivos", "Activos")">Generación de Reportes</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-cloud"></i>Máquinas Virtuales <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        @* Seccción de enlaces a ingreso de nuevo sistema operativo o a modificación de sistema operativo*@
                                        <li>
                                            <a>Sistemas Operativos<span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu">
                                                <li class="sub_menu">
                                                    @* Enlace al método NuevoSistOperativo (Metodo de la clase) del Controlador SistOperativo(Controller) *@
                                                    <a href="@Url.Action("NuevoSistOperativo", "SistOperativo")">Nuevo Sistema Operativo</a>
                                                </li>
                                                <li>
                                                    @* Enlace al método ModificarSistOperativo (Metodo de la clase) del Controlador SistOperativo(Controller) *@
                                                    <a href="@Url.Action("ModificarSistOperativo", "SistOperativo")">Modificar Sistema Operativo</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a>Máquinas Virtuales<span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu">
                                                @* Seccción de enlaces a ingreso de nueva máquina virtual o a modificación de máquinas virtuales*@
                                                <li class="sub_menu">
                                                    @* Enlace al método NuevoMaqVirtual (Metodo de la clase) del Controlador MaqVirtuales(Controller) *@
                                                    <a href="@Url.Action("NuevaMaqVirtual", "MaqVirtuales")">Nueva Máquina Virtual</a>
                                                </li>
                                                <li>
                                                    @* Enlace al método ModificarMaqVirtual (Metodo de la clase) del Controlador MaqVirtuales(Controller) *@
                                                    <a href="@Url.Action("ModificarMaqVirtual", "MaqVirtuales")">Modificar Máquina Virtual</a>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-ticket"></i>Tickets <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        @* Enlace al método GestionTickets (Metodo de la clase) del Controlador Tickets(Controller) *@
                                        <li><a href="@Url.Action("GestionTickets", "Tickets")">Gestión de Tickets</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="menu_section">
                            <h3>Administración</h3>
                            <ul class="nav side-menu">
                                @* Seccción de enlaces a ingreso de nuevo Usuario  o a modificación de Usuarios *@
                                <li>
                                    <a><i class="fa fa-user"></i> Usuarios <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        @* Enlace al método NuevoUsuario (Metodo de la clase) del Controlador Usuarios(Controller) *@
                                        <li><a href="@Url.Action("NuevoUsuario", "Usuarios")">Nuevo Usuario</a></li>
                                        @* Enlace al método ModificarUsuario (Metodo de la clase) del Controlador Usuarios(Controller) *@
                                        <li><a href="@Url.Action("ModificarUsuario", "Usuarios")">Modificar Usuarios</a></li>
                                    </ul>
                                </li>
                                @* Seccción de enlaces a ingreso de nuevo Rol  o a modificación de Roles *@
                                <li>
                                    <a><i class="fa fa-users"></i> Roles <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        @* Enlace al método NuevoRol (Metodo de la clase) del Controlador Roles(Controller) *@
                                        <li><a href="@Url.Action("NuevoRol", "Roles")">Nuevo Rol</a></li>
                                        @* Enlace al método ModificarRol (Metodo de la clase) del Controlador Roles(Controller) *@
                                        <li><a href="@Url.Action("ModificarRol", "Roles")">Modificar Rol</a></li>
                                    </ul>
                                </li>
                                @* Seccción de enlaces para visualización de Logs *@
                                <li>
                                    <a><i class="fa fa-archive"></i> Logs <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        @* Enlace al método Logs (Metodo de la clase) del Controlador Logs(Controller) *@
                                        <li><a href="@Url.Action("Logs", "Logs")">Consulta de Logs</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->
                </div>
            </div>
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    @* ViewBag proveniente del Controloador Login, en el mismo se muestra el nombre del usuario actual *@
                                    <img src="~/Content/Tema/images/user.png" alt="">@ViewBag.UsuarioLogin
                                    <span class=" fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li><a href=""> Perfil</a></li>
                                    <li><a href="">Ayuda</a></li>
                                    <li><a href=""><i class="fa fa-sign-out pull-right"></i> Cerrar Sesión</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <br />
                <!-- top tiles -->                                                                               
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        @* Construcción del Body en el resto de las vistas que hacen uso de este Layout*@
                        @RenderBody()
                    </div>
                </div>
                <!-- /top tiles -->
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Universidad Politécnica Salesiana &copy; 2018
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>

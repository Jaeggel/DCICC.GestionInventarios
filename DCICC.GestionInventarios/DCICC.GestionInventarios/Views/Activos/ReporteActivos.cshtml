@*              Sistema de Gestión de inventarios y ticketing para soporte Técnico
    Autores: Andres Chisaguano - Joel Ludeña
    Descripción: Vista para la elaboracion de reportes de activos de TI mediante filtros de búsqueda.
*@

@* Sección para la definición del menú de administrador o auxiliar técnico *@
@{
    ViewBag.Title = "Marcas";
    Layout = "~/Views/Shared/_Layout" + ViewBag.Menu + ".cshtml";
}

<h1>@ViewBag.Title</h1>
<div class="row">
    @* Panel para visualizar el contenido de los activos de TI *@
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Reporte de Activos</h2>
                <ul class="nav navbar-right panel_toolbox"></ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <div class="form-horizontal form-label-left input_mask">

                    <div class="form-group">
                        @* Combobox para seleccionar el tipo de activo *@
                        <div class="col-md-4 col-sm-12 col-xs-12">
                            <label>Filtro por Categoría</label>
                            <select class="form-control">
                                <option>Seleccionar</option>
                                <option>Option one</option>
                                <option>Option two</option>
                                <option>Option three</option>
                                <option>Option four</option>
                            </select>
                        </div>
                        <div class="col-md-4 col-sm-12 col-xs-12">
                            <label>Filtro por Tipo</label>
                            <select class="form-control">
                                <option>Seleccionar</option>
                                <option>Option one</option>
                                <option>Option two</option>
                                <option>Option three</option>
                                <option>Option four</option>
                            </select>
                        </div>
                        <div class="col-md-4 col-sm-12 col-xs-12">
                            <label>Filtro por Marca</label>
                            <select class="form-control">
                                <option>Seleccionar</option>
                                <option>Option one</option>
                                <option>Option two</option>
                                <option>Option three</option>
                                <option>Option four</option>
                            </select>
                        </div>
                    </div>

                    @* Sección de botones para guardar marca o cancelar el registro *@
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-4">
                            <button type="submit" class="btn btn-success">Reporte PDF</button>
                            <button type="button" class="btn btn-primary">Reporte Excel</button>
                        </div>
                    </div>
                    @* Sección para la tabla de modificación mediante js *@
                    <div id="tablaReporteActivos">

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


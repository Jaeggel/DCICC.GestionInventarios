@*              Sistema de Gestión de inventarios y ticketing para soporte Técnico
    Autores: Andres Chisaguano - Joel Ludeña
    Descripción: Vista para la consulta de activos de TI mediante filtros de búsqueda.
*@

@* Sección para la definición del menú de administrador o auxiliar técnico *@
@{
    ViewBag.Title = "Consulta de Activos";
    Layout = "~/Views/Shared/_Layout" + ViewBag.Menu + ".cshtml";
}

@* Sección para la navegación entre pestañas *@
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
    <li><a>Activos de TI</a></li>
    <li><a class="active">@ViewBag.Title</a></li>
</ul>
<div class="row">
    @* Panel para visualizar la información de los activos de TI *@
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <div class="x-content">
                    <div class="col-md-6 col-sm-12 col-xs-12 ">
                        <h3>Consulta de Activos</h3>
                    </div>
                </div>
                @*Sección para botones de generar reportes en PDF y Excel*@
                <ul class="nav navbar-right panel_toolbox">
                    <li><button type="button" class="btn btn-round btn-danger float-right" onclick="location.href='@Url.Action("", "")'"><i class="fa fa-file-pdf-o"></i> Reporte PDF</button></li>
                    <li> <button type="button" class="btn btn-round btn-success float-right" onclick="location.href='@Url.Action("", "")'"><i class="fa fa-file-excel-o"></i> Reporte Excel</button></li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <div class="form-horizontal form-label-left input_mask">
                    @*Sección de filtros de búsqueda para realizar la consulta*@
                    <div class="form-group">
                        @*Combobox para seleccionar la categoría de activo*@
                        <div class="col-md-4 col-sm-12 col-xs-12">
                            <label>Filtro por Categoría:</label>
                            <select class="form-control">
                                <option>Seleccionar</option>
                                <option>Option one</option>
                                <option>Option two</option>
                                <option>Option three</option>
                                <option>Option four</option>
                            </select>
                        </div>
                        @*Combobox para seleccionar el tipo de activo*@
                        <div class="col-md-4 col-sm-12 col-xs-12">
                            <label>Filtro por Tipo:</label>
                            <select class="form-control">
                                <option>Seleccionar</option>
                                <option>Option one</option>
                                <option>Option two</option>
                                <option>Option three</option>
                                <option>Option four</option>
                            </select>
                        </div>
                        @*Combobox para seleccionar la marca del activo*@
                        <div class="col-md-4 col-sm-12 col-xs-12">
                            <label>Filtro por Marca:</label>
                            <select class="form-control">
                                <option>Seleccionar</option>
                                <option>Option one</option>
                                <option>Option two</option>
                                <option>Option three</option>
                                <option>Option four</option>
                            </select>
                        </div>
                    </div>
                    @* Sección para la tabla de modificación mediante js *@
                    <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">First</th>
                                    <th scope="col">Last</th>
                                    <th scope="col">Handle</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>Mark</td>
                                    <td>Otto</td>
                                    <td>mdo</td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>Jacob</td>
                                    <td>Thornton</td>
                                    <td>fat</td>
                                </tr>
                                <tr>
                                    <th scope="row">3</th>
                                    <td>Larry</td>
                                    <td>the Bird</td>
                                    <td>twitter</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div id="tablaConsultaActivos">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*              Sistema de Gestión de inventarios y ticketing para soporte Técnico
    Autores: Andres Chisaguano - Joel Ludeña
    Descripción: Vista para el ingreso de una nueva categoria de activo como por ejemplo
    HARDWARE, SOFTWARE,REDES, etc.
*@

@* Sección para la definición del menú de administrador o auxiliar técnico *@
@{
    ViewBag.Title = "Categorías de Activos";
    Layout = "~/Views/Shared/_Layout" + ViewBag.Menu + ".cshtml";
}
@model DCICC.GestionInventarios.Models.CategoriaActivo

<h1>@ViewBag.Title</h1>
<div class="row">
    @* Panel para mostrar las opciones de ingreso de una categoría de activo *@
    <div class="col-md-5 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Nueva Categoría de Activo </h2>
                <ul class="nav navbar-right panel_toolbox"></ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                @* Formulario para envio de datos de los componentes para el ingreso de una nueva marca
                    (Metodo de la clase) - Controlador (Controller) *@
                @using (Html.BeginForm("NuevoCategoriaActivo", "CategoriaActivo"))
                {
                    <div class="form-horizontal form-label-left input_mask">
                        @* Cuadro de texto para el ingreso del nombre de una categoria de activo *@
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            <input type="text" class="form-control has-feedback-left" name="NombreCategoriaActivo" placeholder="Nombre de la categoría de activo" maxlength="50" required>
                            <span class="fa fa-pencil-square-o form-control-feedback left" aria-hidden="true"></span>
                        </div>
                        @* Área de Texto para el ingreso de la descripción de una categoría de activo *@
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                            <textarea name="DescripcionCategoriaActivo" class="form-control has-feedback-left" rows="3" placeholder="Descripción de la Categoría de activo" maxlength="150"></textarea>
                            <span class="fa  fa-comments-o form-control-feedback left" aria-hidden="true"></span>
                        </div>
                        @* Checkbox para habilitar o deshabilitar el uso de la nueva categoría de activo *@
                        <div class="form-group">
                            <label class="col-md-3 col-sm-3 col-xs-12">¿Habilitar Categoría de Activo?</label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input name="HabilitadoCategoriaActivo" type="checkbox" class="js-switch" checked />
                            </div>

                        </div>
                        <div class="ln_solid"></div>
                        @* Sección de botones para guardar marca o cancelar el registro *@
                        <div class="form-group">
                            <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                                <button type="submit" class="btn btn-success">Ingresar</button>
                                <button type="button" class="btn btn-primary">Cancelar</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    @* Panel para mostrar la lista de categorias de activos existentes *@
    <div class="col-md-7 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Categorías de Activos Existentes</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <form class="form-horizontal form-label-left input_mask">
                    @* Sección para la elaboración de la tabla de categoria de activos mediante js *@
                    <div id="tablaCategoriaActivo"></div>
                    <h1>Datos</h1>
                </form>
            </div>
        </div>
    </div>
</div>

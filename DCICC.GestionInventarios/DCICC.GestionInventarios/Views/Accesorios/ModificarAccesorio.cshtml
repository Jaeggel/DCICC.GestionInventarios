@*              Sistema de Gestión de inventarios y ticketing para soporte Técnico
    Autores: Andres Chisaguano - Joel Ludeña
    Descripción: Vista para la modificación de un accesorio mediante una tabla extraida
    con js.
*@

@* Sección para la definición del menú de administrador o auxiliar técnico *@
@{
    ViewBag.Title = "Accesorios";
    Layout = "~/Views/Shared/_Layout" + ViewBag.Menu + ".cshtml";
}

@* Sección para la navegación entre pestañas *@
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
    <li><a>Activos de TI</a></li>
    <li><a class="active">@ViewBag.Title</a></li>
</ul>
<div class="row">
    @* Panel para mostrar la tabla de modificación de marcas *@
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <div class="x-content">
                    <div class="col-md-6 col-sm-12 col-xs-12 ">
                        <h3>Listado de Accesorios</h3>
                    </div>
                </div>
                @* Sección para botones de ingresar nueva marca y actualizar página *@
                <ul class="nav navbar-right panel_toolbox">
                    <li> <button type="button" class="btn btn-round btn-success float-right" onclick="location.href='@Url.Action("ModificarAccesorio", "Activos")'"><i class="fa fa-refresh"></i> Actualizar</button></li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                @* Sección para la tabla de modificación mediante js *@
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div id="tablaModificarAccesorio">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@* Modal de modificación de marcas *@
<div class="modal fade" id="ModificarAccesorio" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Modificar Accesorios</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_content">
                            <br>
                            @* Formulario para envio de datos de los componentes para modificación de un accesorio
                                (Metodo de la clase) - Controlador (Controller) *@
                            <div class="form">
                                <div class="form-horizontal form-label-left input_mask">

                                    @* Combobox para seleccionar un Tipo de Accesorio *@
                                    <div class="form-group">
                                        <div class="col-md-12 col-sm-12 col-xs-12">
                                            <label>Escoja el Tipo de Accesorio:</label>
                                            <div id="cargarAccesorio"></div>
                                        </div>
                                    </div>
                                    @* Combobox para seleccionar el activo de TI *@
                                    <div class="form-group">
                                        <div class="col-md-12 col-sm-12 col-xs-12">
                                            <label>Escoja el activo al que pertenece:</label>
                                            <div id="cargarActivos"></div>
                                        </div>
                                    </div>
                                    @* Cuadro de texto para el ingreso del nombre de un accesorio *@
                                    <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                                        <input id="NombreAccesorio" type="text" class="form-control has-feedback-left" name="NombreAccesorio" placeholder="Nombre del Accesorio" maxlength="100" required>
                                        <span class="fa fa-pencil-square-o form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                    @* Cuadro de texto para el ingreso del serial de un accesorio *@
                                    <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                                        <input id="SerialAccesorio" type="text" class="form-control has-feedback-left" name="SerialAccesorio" placeholder="Serial del Accesorio" maxlength="150">
                                        <span class="fa fa-pencil-square-o form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                    @* Cuadro de texto para el ingreso del modelo de un accesorio *@
                                    <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                                        <input id="ModeloAccesorio" type="text" class="form-control has-feedback-left" name="ModeloAccesorio" placeholder="Modelo del Accesorio" maxlength="80">
                                        <span class="fa fa-pencil-square-o form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                    @* Área de Texto para el ingreso de la descripción de un accesorio *@
                                    <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                                        <textarea id="DescripcionAccesorio" name="DescripcionAccesorio" class="form-control has-feedback-left" rows="3" placeholder="Descripción del Accesorio" maxlength="150"></textarea>
                                        <span class="fa  fa-comments-o form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                    @* Checkbox para habilitar o deshabilitar el uso del accesorio *@
                                    <div class="form-group">
                                        <label class="col-md-12 col-sm-12 col-xs-12">¿Habilitar Accesorio?</label>
                                        <div class="col-md-12 col-sm-12 col-xs-12">
                                            <input id="HabilitadoAccesorio" name="HabilitadoMarca" type="checkbox" class="js-switch" value="true" checked />
                                        </div>
                                    </div>
                                    <div class="ln_solid"></div>
                                    @* Sección de botones para guardar accesorio o cancelar el registro *@
                                    <div class="form-group text-center">
                                        <div class="col-md-12 col-sm-12 col-xs-12">
                                            <button type="submit" class="btn btn-success" onclick="modificarAccesorio('@Url.Action("ModificarAccesorio", "Activos")');">Modificar</button>
                                            <button type="button" class="btn btn-primary " data-dismiss="modal" aria-label="Close">Cancelar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

